<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="report2_report_wizard" model="ir.ui.view">
            <field name="name">Report2 Report</field>
            <field name="model">report2.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report2">
                    <footer>
                        <button string="Run Report" name="run_report" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_report2_report_wizard" model="ir.actions.act_window">
            <field name="name">Report2 Report</field>
            <field name="res_model">report2.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="report2_report_wizard"/>
            <field name="target">new</field>
            <field name="help">Print Report2 Report</field>
        </record>

        <menuitem
          id="menu_action_report2_report_wizard"
          action="action_report2_report_wizard"
          parent="stock.menu_warehouse_report"
          sequence="110"/>

    </data>
</openerp>
