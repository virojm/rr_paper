      <!-- Change Menu name -->
      <record id="sale.menu_sale_quotations" model="ir.ui.menu">
        <field name="name">Sales Orders</field>
      </record>
      <record id="purchase.menu_purchase_rfq" model="ir.ui.menu">
        <field name="name">Purchase Orders (Draft)</field>
      </record>

      <record id="view_order_form_inherit_sale_stock" model="ir.ui.view">
          <field name="name">sale.order.form</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="replace">
                  <field name="product_id"
                  invisible="1"
                  context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                  groups="base.group_user"/>
                </xpath>
              <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                  <field name="x_product_id"
                    domain="['|',('sale_partner_id', '=', parent.partner_id),('sale_partner_id', '=', False),('sale_ok','=',True)]"
                    editable="bottom"/>
              </xpath>
              <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="attributes">
                  <attribute name="options">{'no_quick_create': True, 'no_create_edit': True,}</attribute>
              </xpath>
              <xpath expr="//field[@name='order_line']/tree/field[@name='x_product_id']" position="attributes">
                  <attribute name="options">{'no_quick_create': True, 'no_create_edit': True,}</attribute>
              </xpath>
            </field>
            <field name="layout_category_id" invisible="1"/>
            <field name="route_id" invisible="1"/>
            <field name="analytic_tag_ids" invisible="1"/>
        </record>

